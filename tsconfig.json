{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@employee-portal-core/*": ["app/core/*"],
      "@employee-portal-shared/*": ["app/shared/*"],
      "@employee-portal-models/*": ["app/shared/models/*"],
      "@employee-portal-services/*": ["app/core/services/*"],
      "@employee-portal-pipes/*": ["app/shared/pipes/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
